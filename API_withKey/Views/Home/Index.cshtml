@model PlayerHand

@if (ViewBag.Exception != null)
{
    <p>@ViewBag.Exception</p>
}
else
{
    <div class="row">
        <div class="column">

            <h1>This is the Deck ID : @Model.deck_id</h1>
            <h1>&nbsp;</h1>
            <h1>The following cards have been drawn from this deck:</h1>
            <h1>&nbsp;</h1>

            @foreach (var item in Model.piles.player1.cards)
            {
                <h1>This is the @item.value of @item.suit</h1>
                <img src="@item.image">
                <h1>&nbsp;</h1>
            }
        </div>
        <div class="column">
            <div class="text-center">
                <button type="button" class="button" onclick="location.href='@Url.Action("Index", "Home", new { deck_id = Model.deck_id })'">Draw another hand</button>
            </div>
            <h1>Scroll down to see new cards drawn</h1>
        </div>
    </div>
}